{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Project Rules Schema",
  "description": "Format générique pour les fichiers *.rules.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "scope": {
      "type": "object",
      "properties": {
        "stack": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "required": [
        "stack",
        "type"
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "checklists": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "priority": {
            "type": "string"
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "text": {
                  "type": "string"
                },
                "phase": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "text"
              ]
            }
          }
        },
        "required": [
          "id",
          "title",
          "items"
        ]
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "id",
    "title",
    "scope",
    "checklists"
  ]
}